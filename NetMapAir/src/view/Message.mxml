<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   width="400" height="300" title="{titulo}"
			   close="titlewindow_closeHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.CloseEvent;
			import mx.managers.PopUpManager;

			
			[Bindable]
			public var endereco:String = "";
			[Bindable]
			public var titulo:String = "";
			[Bindable]
			public var mensagem:String = "";
			
			
			protected function titlewindow_closeHandler(event:CloseEvent):void
			{
				PopUpManager.removePopUp(this);
			}
			
		]]>
	</fx:Script>
	<mx:VBox width="100%" height="100%" paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10">
		<s:Label text="{resourceManager.getString('resources', 'label.host')+': '+endereco}"/>
		<s:TextArea width="100%" height="100%" editable="false" text="{mensagem}"/>
	</mx:VBox>
</s:TitleWindow>
